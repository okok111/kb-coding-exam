<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<h1 class="geek">GeekSalon_KOBE!</h1>
<%= form_for @student do |f| %>
    <div class="newnew">
        <p><%= f.label :name %>
            <%= f.text_field :name, :size => 10%>
        </p>

        <p><%= f.label :profile %></p>
        <p><%= f.text_area :profile, size: "20x5"%></p>

        <p><%= f.label :mentor %>
            <%= f.text_field :mentor, :size => 10%>
        </p>

        <p><%= f.label :grade %>
            <%= f.text_field :grade, :size => 10%>
        </p>
        <%= f.submit "post" %>
    </div>
    
<% end %>
<%= link_to "投稿一覧へ", students_path %>
